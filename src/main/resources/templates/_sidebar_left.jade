        p
          span!= util.getUserName()
          a.ws-status
            i.fa.fa-circle

    form.sidebar-form
      .input-group
        input.form-control(type='text', placeholder='Search...')
        span.input-group-btn
          a.btn.btn-flat
            i.fa.fa-search

    ul.sidebar-menu
