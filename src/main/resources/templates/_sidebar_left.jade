        a(href='#')
          i.fa.fa-gears
          span Menu2
          i.fa.fa-angle-left.pull-right
        ul.treeview-menu
          li.treeview
            a
              i.fa.fa-link
              span Menu2-1
              i.fa.fa-angle-left.pull-right
