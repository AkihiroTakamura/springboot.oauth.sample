nav.navbar.navbar-static-top(role='navigation')
  a.sidebar-toggle(data-toggle='offcanvas', role='button')
    span.sr-only Toggle navigation
  .navbar-custom-menu
    ul.nav.navbar-nav

      li.dropdown.messages-menu
        a.dropdown-toggle(data-toggle='dropdown')
          i.fa.fa-envelope-o
          span.label.label-success 4
        ul.dropdown-menu
          li.header You have 4 messages
          li
            ul.menu
              li
                a
                  .pull-left
                    img.img-circle(src='http://dummyimage.com/20x20')
                  h4 support team
          li.footer
            a See All Message

      li.dropdown.notifications-menu
        a.dropdown-toggle(data-toggle='dropdown')
          i.fa.fa-bell-o
          span.label.label-warning 10
        ul.dropdown-menu
          li.header You have 10 notifications
          li
            ul.menu
              li
                a
                  i.fa.fa-users.text-aqua
                  5 new members joined today
          li.footer
            a View All

      li.dropdown.tasks-menu
        a.dropdown-toggle(data-toggle='dropdown')
          i.fa.fa-flag-o
          span.label.label-danger 9
        ul.dropdown-menu
          li.header You have 9 tasks
          li
            ul.menu
              li
                a
                  h3 Design some buttons
                  .progress.xs
                    .progress-bar.progress-bar-aqua(style='width: 20%;', role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                      span.sr-only 20% complete
          li.footer
            a View All

      li.dropdown.user.user-menu
        a.dropdown-toggle(data-toggle='dropdown')
          img.user-image.profile-img(src='http://dummyimage.com/80x80')
          span.hidden-xs!= util.getUserName()
        ul.dropdown-menu
          li.user-header
            img.img-circle.profile-img(src='http://dummyimage.com/80x80')
            p
              span!= util.getUserName()
          li.user-body
            .col-xs-4.text-center
              a Followers
            .col-xs-4.text-center
              a Sales
            .col-xs-4.text-center
              a Friends
          li.user-footer
            .pull-left
              a.btn.btn-default.btn-flat Profile
            .pull-right
              a.btn.btn-default.btn-flat.btn-logout Logout

      li
        a(data-toggle='control-sidebar')
          i.fa.fa-gears
